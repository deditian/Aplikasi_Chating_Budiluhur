<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView_dosen"
        android:layout_weight="1"



        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/Textview_dosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"


        android:layout_alignParentStart="true"
        android:weightSum="1">

        <EditText
            android:id="@+id/msg_input_dosen"
            android:hint="Enter Your Message"
            android:textColorHint="#000000"
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:background="@drawable/ediitteax_model_3"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_send_dosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dosen"
            android:textColor="@color/white"
            android:text="Send"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/msg_input"
            android:layout_marginStart="0dp" />
    </LinearLayout>
</LinearLayout>